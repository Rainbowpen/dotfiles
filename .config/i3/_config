# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	# Height in pixels
	height 25
    strip_workspace_numbers yes
	font pango: DejaVu Sans Mono,Source Code Pro Bold 15
	font pango: Source Code Pro Semibold, FontAwesome 15
	status_command i3status-rs ~/.config/i3/status.toml
	position top
    separator_symbol " "
	tray_output primary

	colors {
        background #2f2f3a  # #2c2c2e
		statusline #ffffff
		separator  #44475A

        	focused_workspace  #2f2f3a $yw
        	active_workspace   $yw #2f2f3a  # #333333
        	inactive_workspace #2f2f3a #2f2f3a # #222222
        	urgent_workspace   #ffffff #900000
    	}
}
